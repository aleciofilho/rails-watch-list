<div class="container">
    <h1 class= "pt-3">Create a new Bookmark</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <%= f.submit "Add Movie", class: "btn btn-primary" %>
  <% end %>

  <div class="d-flex justify-content-end">
    <%= link_to "back to #{@list.name}", list_path(@list), class: 'form-link' %>
  </div>

</div>
