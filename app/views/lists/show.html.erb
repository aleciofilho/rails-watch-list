<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.picture.key, crop: :fill %>');">
  <div class= 'btn-flat-yellow'><%= "#{@list.movies.count} movies"%></div>
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container py-4">
  <div class="d-flex justify-content-end pb-2">
    <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn-flat-green' %>
  </div>

  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="movie-card">
        <%= image_tag "#{bookmark.movie.poster_url}", class: 'card-image' %>
        <div class="card-body">
          <div class="d-flex">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="rating"> â€¢ <%= bookmark.movie.rating.round(1) %></p>
            <%# <i class="fa-solid fa-star"></i> %>
          </div>
          <p><%= bookmark.movie.overview %></p>
        </div>
        <div class="d-flex justify-content-between p-3">
          <div class= d-flex>
            <i class="fas fa-quote-left"> </i>
            <span class="px-1"> <%= bookmark.comment%></span>
          </div>
          <%= link_to 'delete',
                      bookmark_path(bookmark),
                      method: :delete,
                      class: 'delete',
                      data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
